<EditForm Model="_model" OnValidSubmit="SubmitAsync">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField @bind-Value="_model.VacationType"
                                  For="@(() => _model.VacationType)"
                                  Label="VacationType"
                                  Required
                                  Variant="Variant.Outlined"
                                  Immediate
                                  Class="mb-3" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudSelect @bind-Value="_model.Day"
                               For="@(() => _model.Day)"
                               Label="Day"
                               Variant="Variant.Outlined"
                               Class="mb-3">
                        @foreach (var day in Enum.GetValues<DayOfWeek>())
                        {
                            <MudSelectItem Value="day">@day.ToString()</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="_model.VacationDate"
                                     For="@(() => _model.VacationDate)"
                                     Label="Vacation Date"
                                     Variant="Variant.Outlined"
                                     Immediate
                                     Class="mb-3" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="_model.AlternativeDate"
                                     For="@(() => _model.AlternativeDate)"
                                     Label="Alternative Date"
                                     Format="F2"
                                     Variant="Variant.Outlined"
                                     Immediate
                                     Class="mb-3" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="_model.Description"
                                  For="@(() => _model.Description)"
                                  Label="Description"
                                  Lines="4"
                                  Variant="Variant.Outlined"
                                  Immediate
                                  Class="mb-3" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">
                Cancel
            </MudButton>
            <MudButton ButtonType="ButtonType.Submit"
                       Color="Color.Primary"
                       Variant="Variant.Filled">
                Add Vacation
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
