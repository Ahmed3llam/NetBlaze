@page "/register"
@using NetBlaze.Ui.Client.Components.Generic
@using NetBlaze.Ui.Client.SharedRazor.Layouts

@layout EmptyLayout

<PageTitle>@StaticLocalization.Register</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="h-100 register-container">
    <EditForm Model="_model" class="register-form">
        <DataAnnotationsValidator />
        <MudContainer MaxWidth="MaxWidth.Large" Class="h-100">
            <MudPaper Elevation="5" Class="h-100 rounded-xl">
                <MudGrid Spacing="0" Justify="Justify.Center" AlignItems="AlignItems.Center" Class="h-100">
                    <MudItem xs="12" sm="5" Class="pa-6 d-flex flex-column align-center justify-center rounded-l-xl register-icon">
                        <MudIcon Icon="@Icons.Material.Rounded.Fingerprint" Title="Fingerprint" Class="fingerprint-icon" />
                    </MudItem>
                    <MudItem xs="12" sm="7" Class="pa-6 d-flex flex-column align-center m-auto gap-2">
                        <MudText Typo="Typo.h5" Align="Align.Center">
                            @StaticLocalization.Register
                        </MudText>

                        <MudItem Class="w-75">
                            <MudTextField @bind-Value="_model.FullName"
                                            For="@(() => _model.FullName)"
                                            Label="@StaticLocalization.FullName"
                                            Required
                                            Variant="Variant.Outlined"
                                            Immediate
                                            Class="mb-3" />
                        </MudItem>

                        <MudItem Class="w-75">
                            <MudTextField @bind-Value="_model.PhoneNumber"
                                            For="@(() => _model.PhoneNumber)"
                                          Label="@StaticLocalization.PhoneNumber"
                                            Required
                                            Variant="Variant.Outlined"
                                            Immediate
                                            Class="mb-3" />
                        </MudItem>

                        <MudItem Class="w-75">
                            <MudTextField @bind-Value="_model.Email"
                                            For="@(() => _model.Email)"
                                          Label="@StaticLocalization.Email"
                                            Required
                                            Variant="Variant.Outlined"
                                            Immediate
                                            Class="mb-3" />
                        </MudItem>

                        <MudItem Class="w-75">
                            <MudTextField @bind-Value="_model.Password"
                                            For="@(() => _model.Password)"
                                            Label="@StaticLocalization.Password"
                                            Adornment="Adornment.End"
                                            AdornmentIcon="@PasswordInputIcon"
                                            OnAdornmentClick="TogglePasswordVisibility"
                                            AdornmentAriaLabel="ShowPassword"
                                            InputType="@PasswordInput"
                                            Format="F2"
                                            Required
                                            Variant="Variant.Outlined"
                                            Immediate
                                            Class="mb-3" />
                        </MudItem>
                
                        <MudItem Class="w-75">
                            <MudTextField @bind-Value="_model.ConfirmPassword"
                                            For="@(() => _model.ConfirmPassword)"
                                            Label="@StaticLocalization.ConfirmPassword"
                                            Adornment="Adornment.End"
                                            AdornmentIcon="@PasswordInputIcon"
                                            OnAdornmentClick="TogglePasswordVisibility"
                                            AdornmentAriaLabel="ShowPassword"
                                            InputType="@PasswordInput"
                                            Format="F2"
                                            Required
                                            Variant="Variant.Outlined"
                                            Immediate
                                            Class="mb-3" />
                        </MudItem>

                        <MudItem Class="w-75">
                            <MudSelect @bind-Value="_model.RoleId"
                                            For="@(() => _model.RoleId)"
                                            Label="@StaticLocalization.Role"
                                            Required
                                            Variant="Variant.Outlined"
                                            Class="mb-3">

                                    <MudSelectItem Value="0L">@StaticLocalization.SelectItem</MudSelectItem>

                                    @foreach (var role in _roles)
                                    {
                                        <MudSelectItem Value="role.Id">@role.Name</MudSelectItem>
                                    }
                            </MudSelect>
                        </MudItem>

                        <MudItem Class="w-75">
                            <MudSelect @bind-Value="_model.DepartmentId"
                                            For="@(() => _model.DepartmentId)"
                                            Label="@StaticLocalization.Department"
                                            Required
                                            Variant="Variant.Outlined"
                                            Class="mb-3">

                                <MudSelectItem Value="0L">@StaticLocalization.SelectItem</MudSelectItem>

                                @foreach (var department in _departments)
                                {
                                    <MudSelectItem Value="department.Id">@department.Name</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <MudItem Class="w-75">
                            <MudSelect @bind-Value="_model.ManagerId"
                                           For="@(() => _model.ManagerId)"
                                           Label="@StaticLocalization.Manager"
                                           Variant="Variant.Outlined"
                                           T="long?"
                                           Placeholder="@StaticLocalization.SelectItem"
                                           Class="mb-3">

                                @* <MudSelectItem T="long?" Value="@(null)">@StaticLocalization.SelectItem</MudSelectItem> *@

                                @foreach (var manager in _managers)
                                {
                                    <MudSelectItem T="long?" Value="manager.Id">@manager.Name</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <MudItem Class="text-center w-75">
                            <GenericLoadingButton Disabled="IsSubmitButtonDisabled"
                                          Class="flex-fill"
                                          OnClick="SubmitAsync"
                                          ButtonText="@StaticLocalization.Register"
                                          EndIcon="@Icons.Material.Filled.AppRegistration"
                                          Type="ButtonType.Submit" />
                        </MudItem>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudContainer>
    </EditForm>
</MudContainer>
